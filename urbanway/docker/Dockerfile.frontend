# Frontend Dockerfile
FROM node:18-alpine AS builder

WORKDIR /app

# Copia tutto il frontend
COPY frontend ./

# Installa dipendenze se non esistono
RUN [ -d node_modules ] || npm install --prefer-offline --no-audit

# Build app
RUN npm run build

# Stage finale - serve con nginx
FROM nginx:alpine

# Copia configurazione nginx
COPY docker/nginx.conf /etc/nginx/nginx.conf

# Copia build
COPY --from=builder /app/dist /usr/share/nginx/html

EXPOSE 3000

CMD ["nginx", "-g", "daemon off;"]
